SELECT * FROM Patients;

SELECT name, contact FROM Patients;

SELECT * FROM Patients WHERE age > 40;

SELECT * FROM Patients WHERE age > 40
AND gender = 'Male';

SELECT * FROM Doctor WHERE name LIKE 'Dr.%';

SELECT * FROM Patients WHERE admission_date BETWEEN '2025-07-01' AND '2025-08-01';

SELECT * FROM Doctor ORDER BY experience_year ASC; 

SELECT * FROM Doctor ORDER BY experience_year DESC;

SELECT * FROM Appointments LIMIT 3;

SELECT name AS Patientname, age AS Age FROM Patients;

SELECT DISTINCT gender FROM Patients;

SELECT * FROM Patients WHERE gender IN ('Female');

SELECT * FROM Patients ORDER BY age;


  
